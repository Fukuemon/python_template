[project]
name = "{{ project_name }}"
version = "0.1.0"
description = "{{ project_description }}"
readme = "README.md"
{%- if author_name or author_email %}
authors = [
    { name = "{{ author_name }}", email = "{{ author_email }}" }
]
{%- endif %}
requires-python = ">={{ python_version }}"
dependencies = [
    "marimo>=0.10.0",
    "polars>=1.17.0",
    "pydantic>=2.9.0",
    "httpx>=0.28.0",
]

[dependency-groups]
dev = [
    "ruff>=0.8.0",
    "pyrefly>=0.42.0",
    "pytest>=8.3.0",
    "pytest-cov>=6.0.0",
    "pre-commit>=4.0.0",
]

[build-system]
requires = ["hatchling"]
build-backend = "hatchling.build"

[tool.hatch.build.targets.wheel]
packages = ["src/{{ _package_name }}"]

[tool.pyrefly]
python-version = "{{ python_version }}"
project-includes = ["src/**/*.py", "notebooks/**/*.py"]
ignore-missing-imports = true

[tool.ruff]
target-version = "py{{ python_version | replace('.', '') }}"
line-length = 88
src = ["src"]

[tool.ruff.lint]
select = ["E", "W", "F", "I", "B", "UP", "N", "ANN", "RUF"]
ignore = ["ANN101", "ANN102"]

[tool.ruff.format]
quote-style = "double"
indent-style = "space"

[tool.pytest.ini_options]
testpaths = ["tests"]
pythonpath = ["src"]
